{
	"manifest_version": 2,

	"name": "ZespolMi - image saver",
	"description": "Save the current image from zespolmi.pl",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://zespolmi.pl/*"],
			"js": ["content.js"]
		}
    ],
	"permissions": ["tabs"],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Save"
	}
}